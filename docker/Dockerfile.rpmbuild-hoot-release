# The base image depends on the version of PosgreSQL from PGDG.
ARG pg_version
FROM hoot/rpmbuild-pgdg:${pg_version}

ARG node_version
ARG packages
ARG pg_version

LABEL \
  description="Container for building Hootenanny RPMs" \
  maintainer="justin.bronn@digitalglobe.com" \
  name="Hootenanny Release RPM Build Image" \
  vendor="Radiant Solutions"

USER root

COPY scripts/hoot-repo.sh \
     scripts/nodejs-install.sh \
     /tmp/

RUN /tmp/hoot-repo.sh && \
    rm /tmp/hoot-repo.sh && \
    /tmp/nodejs-install.sh ${node_version} && \
    rm /tmp/nodejs-install.sh && \
    yum install -y \
      nodejs-${node_version} \
      nodejs-devel-${node_version} \
      yum-plugin-versionlock && \
    yum versionlock nodejs* && \
    if [ ! -z "${packages}" ] ; then yum -y install ${packages}; fi

# Set default user and work directory.
USER ${RPMBUILD_USER}
WORKDIR ${RPMBUILD_HOME}
